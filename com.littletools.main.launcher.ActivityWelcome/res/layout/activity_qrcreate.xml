<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_vertical" 
    android:paddingTop="10dp"
    >
    <ScrollView         
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        
        android:layout_above="@+id/menuQR"
        android:layout_alignParentTop="true"
        >       
        <LinearLayout
	        android:id="@+id/ll_mQRbmp"         
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"              
	        android:gravity="center_horizontal"	     
	        >
	       <ImageView
	            android:id="@+id/iv_QRbmp"
	            android:layout_width="300dp"
	            android:layout_height="300dp"
	            android:layout_gravity="center"
	            android:background="@drawable/bg_qrcreate_def"
	        	/>      
    	</LinearLayout>        
    </ScrollView>    
    
    <LinearLayout 
        android:id="@+id/menuQR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"      
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/bg_qrcreate_menu"
        > 
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        >  	
	        <LinearLayout 
	            android:id="@+id/ll_EditText"
	            android:layout_width="fill_parent"
			    android:layout_height="wrap_content"       
			    android:layout_weight="1" 
			    >
			    <EditText 
			        android:id="@+id/et_strQR"
			        android:layout_width="fill_parent"				    
					android:layout_height="wrap_content"	       
					android:hint="@string/QRCreate_editHint"
					android:textColor="@color/black"
					android:textColorHint="@color/lightblack"
					android:textStyle="italic"
					android:padding="5dp"
					android:maxLines="4"
				    />
			</LinearLayout>

		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_weight="2"
		        android:clickable="true"
		        android:gravity="center_vertical"
		        >
		        <ImageView
		            android:id="@+id/iv_createQR"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/selector_tile_click"
		            android:clickable="true"
		            android:src="@drawable/ic_qrcreate_create" />
		    </LinearLayout>

		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:gravity="center_vertical"
		        android:layout_weight="2"      
		        >
		        <ImageView
		            android:id="@+id/iv_popQRMenu"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:src="@drawable/ic_qrcreate_more"
		            android:background="@drawable/selector_tile_click"
		            android:clickable="true"
		        	/>	        		                 
		    </LinearLayout>
	    </LinearLayout> 
		<LinearLayout 
		    android:id="@+id/ll_menuQR"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:clickable="true"   
		    android:visibility="gone"
		    >
		    <RelativeLayout
		        android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
				android:layout_weight="1"
    			>
			    <ImageView
				    android:id="@+id/iv_styleQR"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:src="@drawable/ic_qrcreate_style"
				    android:background="@drawable/selector_tile_click"
				    android:clickable="true"
				    android:layout_centerInParent="true"
			    	/>
		    </RelativeLayout>
		    <RelativeLayout
		        android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
				android:layout_weight="1"
    			>
				<ImageView
	            	android:id="@+id/iv_saveQR"
	            	android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:src="@drawable/ic_qrcreate_save"
		            android:background="@drawable/selector_tile_click"
		            android:clickable="true"
		            android:layout_centerInParent="true"
	        		/>	 
		    </RelativeLayout>	               		                 
		  </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>			